<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="480dp"
    app:cardCornerRadius="8dp"
    app:cardBackgroundColor="@color/cardview_light_background"
    >
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/red"
                android:text="Đặc sản Tuyên Quang"
                android:gravity="center_vertical"
                android:textSize="20sp"
                android:textStyle="bold|italic"
                android:paddingLeft="10dp"
                android:textColor="@color/colorWhite"
                android:id="@+id/tvTenLoaiThongTinDuLich"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="50dp"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <ImageView
                        android:layout_width="250dp"
                        android:layout_height="250dp"
                        android:id="@+id/imgThongTinDuLich1"
                        android:src="@drawable/xinh1"
                        android:scaleType="centerCrop"
                        />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        >
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:src="@drawable/xinh2"
                            android:scaleType="centerCrop"
                            android:id="@+id/imgThongTinDuLich2"
                            />
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:src="@drawable/xinh3"
                            android:scaleType="centerCrop"
                            android:id="@+id/imgThongTinDuLich3"
                            />
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:orientation="horizontal"
                    >
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:src="@drawable/tuyenquang"
                        android:scaleType="centerCrop"
                        android:id="@+id/imgThongTinDuLich4"
                        />
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:src="@drawable/anhbia"
                        android:scaleType="centerCrop"
                        android:id="@+id/imgThongTinDuLich5"
                        />
                </LinearLayout>
            </LinearLayout>
            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignParentRight="true"
                android:src="@drawable/ruybang_xanh_la_cay"
                android:id="@+id/imgRuyBang"
                />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="right|bottom"
            android:background="@color/transparent_light_black"
            android:text="Xem thêm >"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/colorBlack"
            android:paddingRight="10dp"
            android:layout_alignParentBottom="true"
            android:id="@+id/tvXemThemThongTinDuLich"
            />
        </RelativeLayout>
</android.support.v7.widget.CardView>