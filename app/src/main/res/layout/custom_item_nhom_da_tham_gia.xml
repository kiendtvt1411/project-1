<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="100dp"
    android:id="@+id/cvPageNhomThamGia"
    app:cardCornerRadius="2dp"
    app:cardBackgroundColor="@color/cardview_light_background"
    android:layout_marginBottom="2dp"
    >
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/anhbia"
        android:scaleType="centerCrop"
        android:id="@+id/imgItemAnhBiaPageNhom"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:background="@color/trong_suot_100"
        >
        <RelativeLayout
            android:layout_width="100dp"
            android:layout_height="100dp">
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_centerInParent="true"
                android:src="@drawable/xinh3"
                android:id="@+id/imgItemAvatarPageNhom"
                />
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_vertical"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nhom an choi"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/colorWhite"
                android:id="@+id/tvItemTenPageNhom"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="260 Doi Can"
                android:textColor="@color/colorWhite"
                android:id="@+id/tvItemDiaChiPageNhom"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Co 290 nguoi da tham gia"
                android:textColor="@color/gray_light"
                />
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>