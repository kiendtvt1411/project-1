<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/colorToolbar"
    app:cardCornerRadius="4dp"
    tools:context=".View.Status.Comment.XemChiTietStatus">
    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/colorWhite"
            >
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorWhite"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:id="@+id/llKhongDuocShare"
                    android:visibility="gone"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:orientation="horizontal"
                        >
                        <RelativeLayout
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:gravity="center"
                            >
                            <ImageView
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:src="@drawable/girl"
                                android:scaleType="centerCrop"
                                android:id="@+id/imgStatusChiTiet"
                                />
                        </RelativeLayout>
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                >
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:text="Kiên Nguyễn Trung"
                                    android:textSize="20sp"
                                    android:layout_weight="1"
                                    android:gravity="bottom"
                                    android:textColor="@color/facebook"
                                    android:textStyle="bold"
                                    android:id="@+id/tvUsernameStatusChiTiet"
                                    />
                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:orientation="horizontal"
                                    android:layout_weight="1">
                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal"
                                        >
                                        <ImageView
                                            android:layout_width="15dp"
                                            android:layout_height="15dp"
                                            android:src="@drawable/ic_location_searching_black_24dp"
                                            android:layout_marginRight="2dp"
                                            android:layout_marginTop="2dp"
                                            />
                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="Hà Nội"
                                            android:textSize="12sp"
                                            android:id="@+id/tvLocationStatusChiTiet"
                                            android:layout_gravity="top"
                                            />
                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text=" - "
                                            />
                                        <ImageView
                                            android:layout_width="16dp"
                                            android:layout_height="16dp"
                                            android:src="@drawable/ic_access_time_black_24dp"
                                            android:layout_marginRight="2dp"
                                            android:layout_marginTop="2dp"
                                            />
                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="20/10/2016"
                                            android:textSize="12sp"
                                            android:id="@+id/tvDateStatusChiTiet"
                                            android:layout_gravity="top"
                                            />
                                    </LinearLayout>
                                </LinearLayout>

                            </LinearLayout>
                            <ImageButton
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:src="@drawable/ic_keyboard_arrow_down_black_24dp"
                                android:background="@color/colorWhite"
                                android:scaleType="centerCrop"
                                android:layout_alignParentRight="true"
                                android:layout_marginRight="5dp"
                                android:layout_marginTop="5dp"
                                android:id="@+id/imgSettingStatusChiTiet"
                                />
                        </RelativeLayout>
                    </LinearLayout>
                    <TextView
                        android:layout_width="match_parent"
                        android:paddingRight="10dp"
                        android:paddingLeft="20dp"
                        android:layout_height="wrap_content"
                        android:text="Gặp bao nhiêu là gái xinh nạ!!!"
                        android:ellipsize="end"
                        android:maxLines="6"
                        android:layout_marginBottom="5dp"
                        android:id="@+id/tvContentStatusChiTiet"
                        />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        >
                        <LinearLayout
                            android:layout_width="320dp"
                            android:layout_height="200dp"
                            android:orientation="horizontal"
                            android:paddingRight="10dp"
                            android:paddingLeft="10dp"
                            android:id="@+id/llAnhChiTiet"
                            android:visibility="gone"
                            >
                            <ImageView
                                android:layout_width="200dp"
                                android:layout_height="match_parent"
                                android:src="@drawable/xinh1"
                                android:scaleType="centerCrop"
                                android:layout_marginRight="2dp"
                                android:id="@+id/imgAnh1StatusChiTiet"
                                android:visibility="gone"
                                />
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                >
                                <ImageView
                                    android:layout_width="100dp"
                                    android:layout_height="99dp"
                                    android:src="@drawable/xinh2"
                                    android:scaleType="centerCrop"
                                    android:layout_marginBottom="1dp"
                                    android:id="@+id/imgAnh2StatusChiTiet"
                                    android:visibility="gone"
                                    />
                                <FrameLayout
                                    android:layout_width="100dp"
                                    android:layout_height="100dp"
                                    >
                                    <ImageView
                                        android:layout_width="100dp"
                                        android:layout_height="99dp"
                                        android:src="@drawable/xinh3"
                                        android:scaleType="centerCrop"
                                        android:layout_marginTop="1dp"
                                        android:id="@+id/imgAnh3StatusChiTiet"
                                        android:visibility="gone"
                                        />
                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:background="@color/transparent_black"
                                        android:gravity="center"
                                        android:textColor="@color/colorWhite"
                                        android:textSize="30sp"
                                        android:text="+20"
                                        android:id="@+id/tvNhieuAnhChiTiet"
                                        android:visibility="gone"
                                        />
                                </FrameLayout>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:id="@+id/llDuocShare"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        >
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            >
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_weight="1"
                                >
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    >
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="kiendz"
                                        android:textColor="@color/facebook"
                                        android:textStyle="bold"
                                        android:textSize="16sp"
                                        android:id="@+id/tvNguoiShare"
                                        />
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text=" đã chia sẻ bài viết của"
                                        />
                                </LinearLayout>
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Hội những người thích đi du lịch Tây Bắc"
                                    android:textColor="@color/facebook"
                                    android:textStyle="bold|italic"
                                    android:textSize="16sp"
                                    android:id="@+id/tvNguoiDuocShare1"
                                    />
                            </LinearLayout>
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_keyboard_arrow_down_black_24dp"
                                android:id="@+id/imgSettingStatus"
                                />
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="10dp"
                        android:padding="5dp"
                        android:background="@drawable/duong_vien_xam"
                        android:id="@+id/llContentStatus"
                        >
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="2dp"
                            >
                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@color/colorWhite"
                                android:layout_marginTop="5dp"
                                >
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="70dp"
                                    android:orientation="horizontal"
                                    >
                                    <RelativeLayout
                                        android:layout_width="80dp"
                                        android:layout_height="60dp"
                                        android:gravity="center"
                                        >
                                        <ImageView
                                            android:layout_width="60dp"
                                            android:layout_height="60dp"
                                            android:src="@drawable/girl"
                                            android:scaleType="centerCrop"
                                            android:id="@+id/imgAvatarNguoiDuocShare"
                                            />
                                    </RelativeLayout>
                                    <RelativeLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent">
                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:orientation="vertical"
                                            >
                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="match_parent"
                                                android:text="Hội những người thích đi du lịch Tây Bắc"
                                                android:textSize="16sp"
                                                android:layout_weight="1"
                                                android:textColor="@color/facebook"
                                                android:textStyle="bold"
                                                android:gravity="bottom"
                                                android:id="@+id/tvNguoiDuocShare2"
                                                />
                                            <LinearLayout
                                                android:layout_width="wrap_content"
                                                android:layout_height="match_parent"
                                                android:orientation="horizontal"
                                                android:layout_weight="1">
                                                <LinearLayout
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:orientation="horizontal"
                                                    >
                                                    <ImageView
                                                        android:layout_width="15dp"
                                                        android:layout_height="15dp"
                                                        android:src="@drawable/ic_location_searching_black_24dp"
                                                        android:layout_marginRight="2dp"
                                                        android:layout_marginTop="2dp"
                                                        />
                                                    <TextView
                                                        android:layout_width="wrap_content"
                                                        android:layout_height="wrap_content"
                                                        android:text="Hà Nội"
                                                        android:textSize="12sp"
                                                        android:id="@+id/tvLocationStatusDuocShare"
                                                        android:layout_gravity="top"
                                                        />
                                                    <TextView
                                                        android:layout_width="wrap_content"
                                                        android:layout_height="wrap_content"
                                                        android:text=" - "
                                                        />
                                                    <ImageView
                                                        android:layout_width="16dp"
                                                        android:layout_height="16dp"
                                                        android:src="@drawable/ic_access_time_black_24dp"
                                                        android:layout_marginRight="2dp"
                                                        android:layout_marginTop="2dp"
                                                        />
                                                    <TextView
                                                        android:layout_width="wrap_content"
                                                        android:layout_height="wrap_content"
                                                        android:text="20/10/2016"
                                                        android:textSize="12sp"
                                                        android:id="@+id/tvDateStatusDuocShare"
                                                        android:layout_gravity="top"
                                                        />
                                                </LinearLayout>
                                            </LinearLayout>

                                        </LinearLayout>
                                    </RelativeLayout>
                                </LinearLayout>
                                <TextView
                                    android:layout_width="match_parent"
                                    android:paddingRight="10dp"
                                    android:paddingLeft="20dp"
                                    android:layout_height="wrap_content"
                                    android:text="Mọi người tham khảo tour này xem!!!"
                                    android:ellipsize="end"
                                    android:maxLines="6"
                                    android:layout_marginBottom="5dp"
                                    android:id="@+id/tvContentStatusDuocShare"
                                    />
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:orientation="vertical"
                                    android:layout_height="wrap_content"
                                    android:gravity="center_horizontal"
                                    android:layout_marginBottom="5dp"
                                    >
                                    <LinearLayout
                                        android:layout_width="320dp"
                                        android:layout_height="200dp"
                                        android:orientation="horizontal"
                                        android:paddingRight="10dp"
                                        android:paddingLeft="10dp"
                                        android:id="@+id/llAnhStatusDuocShare"
                                        android:visibility="gone"
                                        >
                                        <ImageView
                                            android:layout_width="200dp"
                                            android:layout_height="match_parent"
                                            android:src="@drawable/xinh1"
                                            android:scaleType="centerCrop"
                                            android:layout_marginRight="2dp"
                                            android:id="@+id/imgAnh1StatusDuocShare"
                                            />
                                        <LinearLayout
                                            android:layout_width="wrap_content"
                                            android:layout_height="match_parent"
                                            android:orientation="vertical"
                                            >
                                            <ImageView
                                                android:layout_width="100dp"
                                                android:layout_height="99dp"
                                                android:src="@drawable/xinh2"
                                                android:scaleType="centerCrop"
                                                android:layout_marginBottom="1dp"
                                                android:id="@+id/imgAnh2StatusDuocShare"
                                                />
                                            <FrameLayout
                                                android:layout_width="100dp"
                                                android:layout_height="100dp"
                                                >
                                                <ImageView
                                                    android:layout_width="100dp"
                                                    android:layout_height="99dp"
                                                    android:src="@drawable/xinh3"
                                                    android:scaleType="centerCrop"
                                                    android:layout_marginTop="1dp"
                                                    android:id="@+id/imgAnh3StatusDuocShare"
                                                    />
                                                <TextView
                                                    android:layout_width="match_parent"
                                                    android:layout_height="match_parent"
                                                    android:background="@color/transparent_black"
                                                    android:gravity="center"
                                                    android:textColor="@color/colorWhite"
                                                    android:textSize="30sp"
                                                    android:text="+20"
                                                    android:id="@+id/tvNhieuAnhDuocShare"
                                                    android:visibility="gone"
                                                    />
                                            </FrameLayout>
                                        </LinearLayout>
                                    </LinearLayout>
                                </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="10dp"
                    >
                    <TextView
                        android:paddingLeft="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="3k"
                        android:id="@+id/tvTransactionLikeChiTiet"
                        android:textColor="@color/facebook"
                        android:textStyle="bold"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" thích - "
                        android:textSize="12sp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="320"
                        android:id="@+id/tvTransactionCommentChiTiet"
                        android:textColor="@color/facebook"
                        android:textStyle="bold"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" bình luận - "
                        android:textSize="12sp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="310"
                        android:id="@+id/tvTransactionShareChiTiet"
                        android:textColor="@color/facebook"
                        android:textStyle="bold"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" chia sẻ"
                        android:textSize="12sp"
                        />
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colorGray"
                    android:layout_marginTop="5dp"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:orientation="horizontal"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:layout_gravity="center_vertical"
                        android:id="@+id/llLikeChiTiet"
                        >
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/empty_heart"
                            android:background="@color/colorWhite"
                            android:layout_marginRight="5dp"
                            android:id="@+id/imgLikeChiTiet"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Thích"
                            android:textColor="@color/colorToolbar"
                            android:background="@drawable/duong_vien_anh"
                            android:id="@+id/tvLikeChiTiet"
                            />
                    </LinearLayout>
                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/colorGray"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Bình luận"
                        android:textColor="@color/colorToolbar"
                        android:background="@drawable/duong_vien_anh"
                        android:layout_gravity="center_vertical"
                        android:gravity="center_horizontal"
                        android:id="@+id/tvCommentChiTiet"
                        />
                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/colorGray"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="Chia sẻ"
                        android:textColor="@color/colorToolbar"
                        android:background="@drawable/duong_vien_anh"
                        android:layout_gravity="center_vertical"
                        android:gravity="center"
                        android:id="@+id/tvShareChiTiet"
                        />
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colorGray"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                >
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:lines="4"
                    android:background="@drawable/duong_vien"
                    android:maxLines="8"
                    android:id="@+id/edtDangComment"
                    android:gravity="top"
                    android:padding="5dp"
                    android:textColor="@color/colorBlack"
                    android:scrollbars="vertical"
                    android:hint="Bình luận ở đây..."
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_insert_emoticon_black_24dp"
                        android:background="@color/colorWhite"
                        android:layout_marginTop="5dp"
                        android:id="@+id/imgChenIconComment"
                        />
                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_image_black_24dp"
                        android:background="@color/colorWhite"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="5dp"
                        android:id="@+id/imgChenAnhComment"
                        />
                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_attach_file_black_24dp"
                        android:background="@color/colorWhite"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="5dp"
                        android:id="@+id/imgChenTepComment"
                        />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="right"
                        android:layout_marginTop="5dp"
                        >
                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="24dp"
                            android:background="@drawable/button_1"
                            android:text="Đăng"
                            android:layout_marginRight="5dp"
                            android:id="@+id/btnDangComment"
                            />
                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="24dp"
                            android:background="@drawable/button_1"
                            android:text="Hủy"
                            android:id="@+id/btnHuyComment"
                            />
                    </LinearLayout>
                </LinearLayout>
                <android.support.v7.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:id="@+id/rvAnhComment"
                    android:visibility="gone"
                    android:layout_margin="5dp"
                    android:scrollbars="horizontal"
                    >
                </android.support.v7.widget.RecyclerView>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/colorGray"
                android:layout_marginTop="5dp"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <ProgressBar
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center_vertical"
                    android:indeterminate="true"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Xem thêm bình luận..."
                    android:paddingLeft="5dp"
                    android:textStyle="bold"
                    android:layout_margin="5dp"
                    android:id="@+id/tvThemComment"
                    />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/colorGray"
                android:layout_marginBottom="5dp"
                />
            <android.support.v7.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/rvBinhLuanCha"
                ></android.support.v7.widget.RecyclerView>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</android.support.v7.widget.CardView>
