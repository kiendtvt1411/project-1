<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/colorToolbar"
    app:cardCornerRadius="4dp"
    android:layout_marginBottom="2dp"
    >
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="horizontal"
            >
            <RelativeLayout
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:gravity="center"
                >
                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/girl"
                    android:scaleType="centerCrop"
                    android:id="@+id/imgStatus"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Kiên Nguyễn Trung"
                        android:textSize="20sp"
                        android:layout_weight="1"
                        android:gravity="bottom"
                        android:textColor="@color/facebook"
                        android:textStyle="bold"
                        android:id="@+id/tvUsernameStatus"
                        />
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:layout_weight="1">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            >
                            <ImageView
                                android:layout_width="15dp"
                                android:layout_height="15dp"
                                android:src="@drawable/ic_location_searching_black_24dp"
                                android:layout_marginRight="2dp"
                                android:layout_marginTop="2dp"
                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Hà Nội"
                                android:textSize="12sp"
                                android:id="@+id/tvLocationStatus"
                                android:layout_gravity="top"
                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=" - "
                                />
                            <ImageView
                                android:layout_width="16dp"
                                android:layout_height="16dp"
                                android:src="@drawable/ic_access_time_black_24dp"
                                android:layout_marginRight="2dp"
                                android:layout_marginTop="2dp"
                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="20/10/2016"
                                android:textSize="12sp"
                                android:id="@+id/tvDateStatus"
                                android:layout_gravity="top"
                                />
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_keyboard_arrow_down_black_24dp"
                    android:background="@color/colorWhite"
                    android:scaleType="centerCrop"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:id="@+id/imgSettingStatus"
                    />
            </RelativeLayout>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:paddingRight="10dp"
            android:paddingLeft="20dp"
            android:layout_height="wrap_content"
            android:text="Gặp bao nhiêu là gái xinh nạ!!!"
            android:ellipsize="end"
            android:maxLines="6"
            android:layout_marginBottom="5dp"
            android:id="@+id/tvContentStatus"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            >
            <LinearLayout
                android:layout_width="320dp"
                android:layout_height="200dp"
                android:orientation="horizontal"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"
                android:id="@+id/llAnh"
                android:visibility="gone"
                >
                <ImageView
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/xinh1"
                    android:scaleType="centerCrop"
                    android:layout_marginRight="2dp"
                    android:id="@+id/imgAnh1Status"
                    android:visibility="gone"
                    />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    >
                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="99dp"
                        android:src="@drawable/xinh2"
                        android:scaleType="centerCrop"
                        android:layout_marginBottom="1dp"
                        android:id="@+id/imgAnh2Status"
                        android:visibility="gone"
                        />
                    <FrameLayout
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        >
                        <ImageView
                            android:layout_width="100dp"
                            android:layout_height="99dp"
                            android:src="@drawable/xinh3"
                            android:scaleType="centerCrop"
                            android:layout_marginTop="1dp"
                            android:id="@+id/imgAnh3Status"
                            android:visibility="gone"
                            />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/transparent_black"
                            android:gravity="center"
                            android:textColor="@color/colorWhite"
                            android:textSize="30sp"
                            android:text="+20"
                            android:id="@+id/tvNhieuAnh"
                            android:visibility="gone"
                            />
                    </FrameLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            >
            <TextView
                android:paddingLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3k"
                android:id="@+id/tvTransactionLike"
                android:textColor="@color/facebook"
                android:textStyle="bold"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" thích - "
                android:textSize="12sp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="320"
                android:id="@+id/tvTransactionComment"
                android:textColor="@color/facebook"
                android:textStyle="bold"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" bình luận - "
                android:textSize="12sp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="310"
                android:id="@+id/tvTransactionShare"
                android:textColor="@color/facebook"
                android:textStyle="bold"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" chia sẻ"
                android:textSize="12sp"
                />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorGray"
            android:layout_marginTop="5dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_gravity="center_vertical"
                android:id="@+id/llLike"
                >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/empty_heart"
                    android:background="@color/colorWhite"
                    android:layout_marginRight="5dp"
                    android:id="@+id/imgLike"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Thích"
                    android:textColor="@color/colorToolbar"
                    android:background="@drawable/duong_vien_anh"
                    android:id="@+id/tvLike"
                    />
            </LinearLayout>
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/colorGray"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Bình luận"
                android:textColor="@color/colorToolbar"
                android:background="@drawable/duong_vien_anh"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:id="@+id/tvComment"
                />
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/colorGray"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Chia sẻ"
                android:textColor="@color/colorToolbar"
                android:background="@drawable/duong_vien_anh"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:id="@+id/tvShare"
                />
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>
