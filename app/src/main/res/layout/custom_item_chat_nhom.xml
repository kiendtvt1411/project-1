<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/colorWhite"
    app:cardCornerRadius="5dp"
    android:id="@+id/cvKhungChat"
    android:layout_marginTop="5dp"
    android:layout_marginLeft="5dp"
    >
    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        >
        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:id="@+id/pb"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <RelativeLayout
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:layout_marginRight="10dp"
                >
                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    android:src="@drawable/girl"
                    android:id="@+id/imgAvatarNhom"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    />
            </RelativeLayout>
            <TextView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:id="@+id/tvTenNhom"
                android:text="Hội học bài đầu năm baldjflasjorqoeroqifdasf"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="@color/colorToolbar"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:layout_marginBottom="5dp"
                />
            <TextView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:id="@+id/tvNguoiThamGiaNhom"
                android:text="kiendtvt, vanhthui, phucham, kiendz"
                android:textColor="@color/colorRed"
                android:ellipsize="end"
                android:singleLine="true"
                />

        </LinearLayout>
    </FrameLayout>


</android.support.v7.widget.CardView>