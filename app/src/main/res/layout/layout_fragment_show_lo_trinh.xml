<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="400dp">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/dulich"
        android:scaleType="centerCrop"
        android:id="@+id/imgItemShowLoTrinh"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:background="@color/transparent_light_black"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="2dp"
            android:text="Khu du lịch sinh thái Nà Ngần"
            android:maxLines="2"
            android:textSize="18sp"
            android:textColor="@color/colorYellow"
            android:layout_marginBottom="5dp"
            android:id="@+id/tvTenDiaDiemTrongLoTrinh"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="2dp"
            android:ellipsize="end"
            android:id="@+id/tvMoTaChiTiet"
            android:textColor="@color/colorWhite"
            />
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="Xem thêm"
        android:textColor="@color/colorWhite"
        android:gravity="right"
        android:paddingBottom="5dp"
        android:paddingRight="5dp"
        android:id="@+id/tvXemThem"
        android:visibility="gone"
        />
</RelativeLayout>